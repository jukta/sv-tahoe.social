<sv:root xmlns:sv="http://svsoft.net/tahoe/schema">

    <sv:block name="pair">
        <sv:set name="class" value="" override="false"/>
        <sv:set name="style" value="" override="false"/>
        <div class="pair ${class}">
            <div class="fixed" style="${style}">
                <sv:def name="fixed"/>
            </div>
            <div class="block">
                <sv:def name="block"/>
            </div>
        </div>
    </sv:block>

</sv:root>