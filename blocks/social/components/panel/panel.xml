<sv:root xmlns:sv="http://svsoft.net/tahoe/schema" xmlns="http://www.w3.org/1999/xhtml">

    <sv:block name="panel">
        <sv:set name="class" value="" override="false"/>
        <div class="panel ${class}" sv-controller="panel">
            <div class="panel-head">
                <div class="panel-tools">
                    <a class="collapse" href="#" sv-click="collapse"></a>
                </div>
                <div class="panel-title">
                    ${title}
                </div>
            </div>

            <div class="panel-body">
                <sv:def/>
            </div>
        </div>
    </sv:block>

</sv:root>