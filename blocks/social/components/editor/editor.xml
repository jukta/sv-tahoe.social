<sv:root xmlns:sv="http://svsoft.net/tahoe/schema" xmlns="http://www.w3.org/1999/xhtml">
    <sv:block name="editor">
        <sv:set name="class" value="" override="false"/>
        <div id="${id}" class="editor ${class}" sv-controller="editor">
            <!--<span><sv:def name="placeholder">Your text</sv:def></span>-->
            <div class="tool-bar">
                <img sv-click="strong" src="img/em.svg"/>
                <img sv-click="code" src="img/code.svg"/>
                <img sv-click="cite" src="img/cite.svg"/>
                <img sv-click="img" src="img/img.svg"/>
                <img sv-click="link" src="img/link.svg"/>
            </div>
            <div class="edit-area user-text" contenteditable="true"><sv:def></sv:def></div>
            <div class="link-form-wrp" style="display:none">
                <div class="link-form">
                    <input name="name" type="text"></input>
                    <input name="href" type="text"></input>
                    <button class="ok">ok</button>
                </div>
            </div>
        </div>


    </sv:block>
</sv:root>